@model iHubz.Web.Models.ImportCompaniesModel
@{
    ViewBag.Title = "Import Companies";
}

<h2>Import Companies</h2>

<hr />
@using (Html.BeginForm("PerformImport", "Companies", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.FileUpload, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FileUpload, new { type = "file", @class = "form-control" })                
                @Html.ValidationMessageFor(m => m.FileUpload, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
                @Html.ActionLink("Cancel", "Import", null, new { @class = "btn btn-warning" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
